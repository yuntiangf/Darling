<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<com.darling.ui.BaseTitleLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        ></com.darling.ui.BaseTitleLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/detail_clothes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:src="@drawable/model1_item1"/>


        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_gravity="right"
	        android:background="@color/lavender">
            
            <ImageView
	            android:id="@+id/item_buy1"
	            android:layout_width="39dp"
	            android:layout_height="39dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginTop="5dp"
	            android:layout_alignParentRight="true"
	            android:src="@drawable/buy"/>
            
            
            <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="60dp"
	            android:orientation="vertical"
	            android:layout_alignParentBottom="true"
	            android:background="@color/lavender">
	            
                <TextView 
	                android:id="@+id/chuanda"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="我穿我搭"
	                android:textSize="20dp"
	                android:gravity="center"/>
                
                <View 
	                android:layout_width="match_parent"
	                android:layout_height="2dp"
	                android:background="@drawable/liner"/>
                <LinearLayout
                    android:id="@+id/like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:src="@drawable/wxh" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="left"
                        android:text="Like"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <View 
	                android:layout_width="match_parent"
	                android:layout_height="2dp"
	                android:background="@drawable/liner"/>
            </LinearLayout>
            
           
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:background="@color/gainsboro">
        
        <TextView 
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:text="呢子大衣"
            android:textSize="23dp"
            android:gravity="center"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="center">
            
            <TextView 
                android:id="@+id/price1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="现价：￥300"
                android:textSize="15dp"
                android:gravity="center"/>
            <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView 
                android:id="@+id/price2"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:text="原价：￥800"
                android:textSize="15dp"
                android:gravity="center"/>
            <TextView 
                android:id="@+id/only_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="手机专享"
                android:textSize="15dp"
                android:textColor="@color/deepskyblue"
                android:gravity="center"/>
            <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView 
                android:id="@+id/other"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:text="参考多件折扣"
                android:textSize="13dp"
                android:textColor="@color/deepskyblue"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:gravity="center">
            
            <TextView 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="销量："
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView 
                android:id="@+id/sales"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="85 件"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:text="好评率："
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView 
                android:id="@+id/review_rate"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="match_parent"
                android:text="100%"
                android:textSize="18dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0">
        
        <GridView 
		    android:id="@+id/item_grid"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:verticalSpacing="10dp"
		    android:horizontalSpacing="10dp"
		    android:numColumns="3"
		    android:fadeScrollbars="true"
		    android:gravity="center"
		    android:visibility="visible">
    
		</GridView>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal"
	    android:background="@color/lavender">
        
        <TextView 
            android:id="@+id/item_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:text="预约试穿"
            android:textSize="23dp"
            android:gravity="center"/>
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"/>
        
        <ImageView
	            android:id="@+id/item_buy2"
	            android:layout_width="0dp"
	            android:layout_height="40dp"
	            android:layout_weight="1.5"
	            android:src="@drawable/buy"/>
        
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"/>
        
        <TextView 
            android:id="@+id/buy_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.0"
            android:text="立即购买"
            android:textSize="23dp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
