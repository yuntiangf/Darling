<?xml version="1.0" encoding="utf-8"?>
<!-- 发现 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >
	
        <ImageView 
            android:id="@+id/find_tab_zero"
	        android:layout_height="20dp"
	        android:layout_width="20dp"
	        android:layout_margin="10dp"
	        android:scaleType="fitXY"
	        android:layout_gravity="center"
	        android:src="@drawable/header_icon1"/>	
	        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:background="@color/white"
            android:layout_weight="4.0"
            android:gravity="center"
            android:orientation="horizontal" >
			
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />
            
            <ImageView
                android:id="@+id/find_tab_one"
                android:layout_width="0dp"
                android:layout_height="25dip"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/recommend_1" />

            <View
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:background="@drawable/divider_vertical" />

            <ImageView
                android:id="@+id/find_tab_two"
                android:layout_width="0dp"
                android:layout_height="25dip"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/fashion_2" />

            <View
                android:layout_width="1dip"
                android:layout_height="20dp"
                android:background="@drawable/divider_vertical" />

            <ImageView
                android:id="@+id/find_tab_three"
                android:layout_width="0dp"
                android:layout_height="25dip"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/category_2" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />
        </LinearLayout>
        <ImageView 
            android:id="@+id/find_tab_scan"
	        android:layout_height="25dp"
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:src="@drawable/header_icon4"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/divider_horizontal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/find_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="4.0" />

</LinearLayout>